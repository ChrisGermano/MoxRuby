block variables
doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title #{title}
    link(rel="stylesheet" type="text/css" href="/bootstrap.min.css")
    link(rel="stylesheet" type="text/css" href="/pixel.css")
    link(rel="stylesheet" type="text/css" href="/custom.css")
  body
    div#container-fluid
      div.col-12.col-md-6.offset-md-3.mb-4.mb-lg-5.mainWindow
        nav.navbar.navbar-expand-lg.navbar-dark.justify-content-between.mb-3.mainWindow__navBar
          ul.navbar-nav.navbar-nav-hover.flex-row.align-items-center
            li.nav-item
              a.nav-link(href="#" role="button")
                span.nav-link-inner-text Home
            li.nav-item
              a.nav-link(href="/" role="button")
                span.nav-link-inner-text Form
        div.card.card-tertiary
          div.card-header.text-center
            span.icon.icon-xs.w95-window-empty
            span Crappy MtG Website
          div.card-body
            block card-contents

            p.card-text (Placeholder) Magic the Gathering
            div.d-flex.mt-3
              button.btn.btn-sm.mr-2.btn-primary.border-dark(type="button")
                span.btn-text OK

    script(type="text/javascript" src="/jquery.min.js")
    script(type="text/javascript" src="/bootstrap.min.js")
    script(type="text/javascript" src="/pixel.js")
